<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.android.serviceexcercise.MainActivity">

    <Button
        android:id="@+id/btnStartService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Start service"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/btnStartService"
        app:layout_constraintStart_toStartOf="@id/btnStartService"
        app:layout_constraintEnd_toEndOf="@id/btnStartService"
        android:id="@+id/btnStopService"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="Stop service"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/btnStopService"
        app:layout_constraintStart_toStartOf="@id/btnStartService"
        app:layout_constraintEnd_toEndOf="@id/btnStartService"
        android:layout_marginTop="100dp"
        android:id="@+id/btnBroadcast"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="Send broadcast"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnStartService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBroadcast"
        android:text="Finish"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/btnStopService"
        app:layout_constraintStart_toStartOf="@id/btnStartService"
        app:layout_constraintEnd_toEndOf="@id/btnStartService"
        android:id="@+id/btnBindService"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Bind service"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/btnBindService"
        app:layout_constraintStart_toStartOf="@id/btnStartService"
        app:layout_constraintEnd_toEndOf="@id/btnStartService"
        android:id="@+id/btnUnBindService"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="UnBind service"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
